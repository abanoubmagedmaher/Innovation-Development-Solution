@model IEnumerable<Innovation.Development.BLL.Models.Students.StudentDto>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Students</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">Add New Student</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Student Form</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="col-md-6">
                        <label for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Address</label>
                    <textarea class="form-control" id="Address" name="Address" rows="2" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Subjects</label>
                    <div class="row">
                        @if (ViewBag.Subjects != null)
                        {
                            @foreach (var subject in ViewBag.Subjects)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedSubjects" value="@subject.Id" id="subject_@subject.Id">
                                        <label class="form-check-label" for="subject_@subject.Id">
                                            @subject.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Add</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Students List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date of Birth</th>
                            <th>Address</th>
                            <th>Subjects</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.Name</td>
                                    <td>@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                    <td>@student.Address</td>
                                    <td>
                                        @if (student.Subjects != null && student.Subjects.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var subject in student.Subjects)
                                                {
                                                    <li><span class="badge bg-primary">@subject.Name</span></li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span>No subjects</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Update</a>
                                        <button type="button" class="btn btn-sm btn-danger delete-student" data-id="@student.Id">Delete</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">No students found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.delete-student').click(function () {
                var studentId = $(this).data('id');
                
                if (confirm('Are you sure you want to delete this student?')) {
                    $.ajax({
                        url: '@Url.Action("Delete")',
                        type: 'POST',
                        data: { id: studentId },
                        success: function (result) {
                            if (result.success) {
                                alert('The Record is Deleted');
                                location.reload();
                            } else {
                                alert('Failed to delete the student');
                            }
                        },
                        error: function () {
                            alert('An error occurred while deleting the student');
                        }
                    });
                }
            });
        });
    </script>
}