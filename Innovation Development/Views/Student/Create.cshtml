@model Innovation.Development.BLL.Models.Students.CreateStudentDto

@{
    ViewData["Title"] = "Add Student";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Add New Student</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" required />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="2" required></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Subjects</label>
                    <div class="row">
                        @if (ViewBag.Subjects != null)
                        {
                            @foreach (var subject in ViewBag.Subjects)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedSubjects" value="@subject.Id" id="subject_@subject.Id">
                                        <label class="form-check-label" for="subject_@subject.Id">
                                            @subject.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}